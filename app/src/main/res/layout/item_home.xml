<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textStyle="bold"
        android:textColor="@color/common_text_black"
        android:textSize="14sp"
        android:id="@+id/txvAccountName"
        android:text="陈晨"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_alignBaseline="@+id/txvAccountName"
        android:textColor="#737373"
        android:textSize="12sp"
        android:id="@+id/txvAccountDate"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txvAccountName"
        android:text="2020-04-08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txvAccountName"
        android:id="@+id/txvAccountEvent"
        android:text="婚礼"
        android:textColor="@color/common_text_black"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/imvAccountArrow"
        android:layout_alignParentRight="true"
        android:src="@drawable/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toLeftOf="@+id/imvAccountArrow"
        android:layout_centerVertical="true"
        android:id="@+id/txvAccountCountUnit"
        android:text="元"
        android:textSize="13sp"
        android:textColor="#676767"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txvAccountCountUnit"
        android:id="@+id/txvAccountCount"
        android:text="200"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/common_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>