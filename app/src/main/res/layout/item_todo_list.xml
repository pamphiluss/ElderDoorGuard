<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:lv="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:ellipsize="marquee"
        android:id="@+id/txvTodoTitle"
        android:text="参加婚礼"
        android:textSize="14sp"
        android:textColor="@color/common_text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true" />

    <TextView
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/txvTodoTitle"
        android:id="@+id/txvTodoDateTime"
        android:layout_marginTop="10dp"
        android:text="2020-01-01"
        android:textSize="12sp"
        android:textColor="@color/common_text_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.syd.elderguard.widget.LabelView
        android:id="@+id/txvLabelOverdue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        lv:lv_background_color="@color/common_text_gray"
        lv:lv_gravity="TOP_RIGHT"
        lv:lv_text="过期"
        lv:lv_text_size="10sp"/>

</RelativeLayout>